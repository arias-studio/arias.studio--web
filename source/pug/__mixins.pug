mixin sidebar__item(media, name, year, img)
	a.sidebar__item(href=img+'.html')
		.sidebar__item--l
			h5=media
		.sidebar__item--c
			.sidebar_item--img
				picture#img--hide
					source(srcset='/img/'+img+'_0.avif', type='image/avif')
					source(srcset='/img/'+img+'_0.webp', type='image/webp')
					source(srcset='/img/'+img+'_0.jpg', type='image/jpg')
					img(src='/img/'+img+'_0.webp', alt=name)
			h2=name
		.sidebar__item--r
			h5=year
//---------------------------------------
mixin sidebar__item--en(media, name, year, img)
	a.sidebar__item(href=img+'--en.html')
		.sidebar__item--l
			h5=media
		.sidebar__item--c
			.sidebar_item--img
				picture#img--hide
					source(srcset='/img/'+img+'_0.avif', type='image/avif')
					source(srcset='/img/'+img+'_0.webp', type='image/webp')
					source(srcset='/img/'+img+'_0.jpg', type='image/jpg')
					img(src='/img/'+img+'_0.webp', alt=name)
			h2=name
		.sidebar__item--r
			h5=year
